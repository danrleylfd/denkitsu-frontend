{
  "manifest_version": 3,
  "name": "Denkitsu AI",
  "version": "1.0",
  "description": "Acesse o chat Denkitsu na Side Panel e interaja com o contexto da sua p√°gina atual.",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage"
  ],
  "icons": {
    "16": "denkitsu-rounded.png",
    "48": "denkitsu-rounded.png",
    "128": "denkitsu-rounded.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Abrir Denkitsu AI"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    },
    {
      "matches": ["https://denkitsu.vercel.app/*"],
      "js": ["storage_bridge.js"]
    }
  ],
  "side_panel": {
    "default_path": "./extension.html"
  }
}
