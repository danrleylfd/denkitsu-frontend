{
  "manifest_version": 3,
  "name": "Denkitsu AI",
  "version": "1.2.1.1",
  "description": "Acesse o chat Denkitsu no painel lateral e interaja com o contexto da sua p√°gina atual.",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage"
  ],
  "icons": {
    "16": "denkitsu-rounded.png",
    "48": "denkitsu-rounded.png",
    "128": "denkitsu-rounded.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Abrir Denkitsu AI"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+I",
        "mac": "Alt+I"
      },
      "description": "Abrir/Fechar o painel lateral do Denkitsu AI"
    }
  },
  "omnibox": {
    "keyword": "@Denkitsu"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    },
    {
      "matches": ["https://denkitsu.vercel.app/*"],
      "js": ["storage_bridge.js"]
    }
  ],
  "side_panel": {
    "default_path": "./extension.html"
  }
}
